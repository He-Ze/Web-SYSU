<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>blog</servlet-name>
        <servlet-class>Servlet.blog</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Servlet.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>blogger</servlet-name>
        <servlet-class>Servlet.blogger</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>remark</servlet-name>
        <servlet-class>Servlet.remark</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>like</servlet-name>
        <servlet-class>Servlet.like</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>follow</servlet-name>
        <servlet-class>Servlet.follow</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>Servlet.search</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>Servlet.logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>blog</servlet-name>
        <url-pattern>/blog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>blogger</servlet-name>
        <url-pattern>/blogger</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>remark</servlet-name>
        <url-pattern>/remark</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>like</servlet-name>
        <url-pattern>/like</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>follow</servlet-name>
        <url-pattern>/follow</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
